<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin" android:gravity="center"
    android:background="@color/translucent_black_dark"
    tools:context="io.codemojo.sdk.ui.GamificationTransactions">

    <TextView
        android:id="@+id/codemojo_dialog_milestones_title" android:background="@color/translucent_black_dark" android:text="@string/rewards_selection_title"
        android:layout_alignParentTop="true" android:textColor="#FFFFFF"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:paddingTop="15dp" android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center" />
    <LinearLayout
        android:background="#F0FFFFFF"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_centerInParent="true" android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/codemojo_dialog_milestones_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ListView
            android:id="@+id/lstTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>
