<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" android:layout_gravity="center" android:gravity="center"
    tools:context=".GamificationActivity">

    <TextView
        android:textAlignment="center"
        android:text="Wallet Balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblWalletBalance"
        android:padding="10dp" android:background="#eaeaea"
        android:textAlignment="center" android:textStyle="bold" android:textSize="20sp"
        android:text="0 pts" android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textAlignment="center"
        android:text="Click on the buttons Number of times as mentioned to unlock an achievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Uno (1 times)" android:id="@+id/btnUno"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Started (3 times)" android:id="@+id/btnStart"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Community (7 times)" android:id="@+id/btnCommunity"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:text="Leader (10 times)" android:id="@+id/btnLeader"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />


</LinearLayout>
